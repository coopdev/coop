<script type="text/javascript">

$(document).ready(function() {
    $("#fileUpload").hide();
    $("#fileUpload-label").hide();
    
    $("#fileUploadToggle").live('click', function() {
        $("#fname").hide();
        $("#fname-label").hide();
        $("#lname").hide();
        $("#lname-label").hide();
        $("#username").hide();
        $("#username-label").hide();

        $(this).text("Add user manually");
        $(this).attr("id", "addUserManuallyToggle");
        
        $("#fileUpload").show();
        $("#fileUpload-label").show();

        $("#submitType").attr("value", "file");
    });


    $("#addUserManuallyToggle").live('click', function() {
        $("#fileUpload").hide();
        $("#fileUpload-label").hide();
        
        $(this).text("Upload File Instead");
        $(this).attr("id", "fileUploadToggle");

        $("#fname").show();
        $("#fname-label").show();
        $("#lname").show();
        $("#lname-label").show();
        $("#username").show();
        $("#username-label").show();
        
        $("#submitType").attr("value", "manual");
    });

});



</script>
