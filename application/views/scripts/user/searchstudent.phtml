      $(".buttonpanel").hide();



      function search() {
         data = $("#searchform").toJSON();

         $.post("/async/student-rec-search-result", {'data' : data}, function($resp) {

            $("#asyncContainer").empty();
            $("#asyncContainer").append($resp);

            if ( $("#searchresults-table").length > 0) {
               $(".buttonpanel").show();
               $("#resultFlag").val("success");
            } else {
               $(".buttonpanel").hide();
               $("#resultFlag").val("");
